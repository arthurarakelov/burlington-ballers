# Firebase Configuration
# Get these values from your Firebase project settings
REACT_APP_FIREBASE_API_KEY=your_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id
REACT_APP_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Optional: OpenWeatherMap API for real weather data
# Get this from https://openweathermap.org/api
REACT_APP_WEATHER_API_KEY=your_weather_api_key_here

# EmailJS Configuration for notifications
# Get these from https://www.emailjs.com/
REACT_APP_EMAILJS_PUBLIC_KEY=your_emailjs_public_key
REACT_APP_EMAILJS_SERVICE_ID=your_emailjs_service_id
REACT_APP_EMAILJS_RSVP_TEMPLATE_ID=your_rsvp_template_id
REACT_APP_EMAILJS_ATTENDANCE_TEMPLATE_ID=your_attendance_template_id
REACT_APP_EMAILJS_GAME_CHANGE_TEMPLATE_ID=your_game_change_template_id